<view class="body">

  <view class="logo">
    <image src="/pages/images/logo.png"></image>
  </view>
  <text>报修人员登录</text>


  <view class="container">
    <text class="choice" style="color:{{color1}}" bindtap="to_apLogin">账号登录</text>|
    <text class="choice" style="color:{{color2}}" bindtap="to_wxLogin">微信登录</text>
  </view>

</view>


<!-- 账号密码登录 -->
<view hidden="{{!apLogin}}">
  <form bindsubmit="formSubmit" bindreset="formReset">
    <van-cell-group>
      <van-field name="username" required clearable label="用户名" icon="question-o" placeholder="请输入用户名" bind:click-icon="onClickIcon" />

      <van-field name="password" type="password" label="密码" placeholder="请输入密码" />
    </van-cell-group>

    <van-row>
      <van-col span="8" offset="4">
        <van-button round type="default" bindtap="goToRegister">注册</van-button>
      </van-col>
      <van-col span="8" offset="2">
        <van-button round type="info" formType="submit" hover-class="other-button-hover"> 登录</van-button>
      </van-col>
    </van-row>
    <button formType="submit">aaa</button>
  </form>

</view>



