<!-- 微信登录 -->
<view hidden="{{!wxLogin}}">
  <view wx:if="{{canIUse}}">
  <van-row>
      <van-col span="18" offset="5">
        <van-button round type="info" open-type='getUserInfo' bindgetuserinfo='bindGetUserInfo'>微信授权登录</van-button>
      </van-col>
    </van-row>
    
  </view>

  <view wx:else>请升级微信版本</view>

</view>