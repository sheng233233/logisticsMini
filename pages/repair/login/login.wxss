/* pages/repair/login/login.wxss */

page {
  
  background-image: '/pages/images/account_bg.png';
  background-color: #fff;
  font-size: 40rpx;
}

.body {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.body image {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  overflow: hidden;
}

.logo {
  margin-top: 5%;
}

.container {
  background-color: white;
  padding: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.choice {
  color: gainsboro;
  font-size: 15px;
  width: 240rpx;
  height: 90rpx;
  text-align: center;
  line-height: 38px;
  background-color: transparent; /*按钮透明*/
  border: none; /*设置按钮边框*/
}

.choice::after {
  color: paleturquoise;
  border: none;
}

.login {
  width: 90%;
  /* height: 90%; */
}

.login text {
  font-size: 15px;
}

.login image {
  width: 80%;
  height: 100rpx;
  margin: 20% auto;
  display: block;
}

input {
  border: 1px solid #ddd;
  line-height: 80rpx;
  height: 80rpx;
  width: 80%;
  margin: 5% auto;
  padding-left: 20rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

