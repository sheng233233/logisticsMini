<!--pages/repair/orderform/edit/edit.wxml-->
<text>pages/repair/orderform/edit/edit.wxml</text>
<view>
  <form bindsubmit="formSubmit" bindreset="formReset">
    <text name='location'>{{orderform.location}}\n</text>
    <text name='type'>{{orderform.sort_name}}</text>
   
    <textarea placeholder="请填写详细故障描述,字数控制在6-500字之间" name="description" value="{{orderform.description}}" />


    <image src="{{orderform.repair_image}}" hidden="{{!before}}" style="width: 100%;" />
    <image src="{{tempFilePath}}" hidden="{{!after}}" style="width: 100%;" />
    <button bindtap="uploadIMG">点击修改图片</button>
    <image src="{{item }}" bindtap="listenerButtonPreviewImage" data-index="{{index}}" style="width: 100%;" />
    <textarea placeholder="备注,选填" name="remarks" value="{{orderform.remarks}}" />
    <input name="contact_person" bindblur="check_contact_person" placeholder="请填写联系人" value="{{orderform.contact_person}}"/>
    <input name="contact_number" bindblur="check_contact_number" placeholder="请填写联系电话" value="{{orderform.contact_number}}"/>

    <button type="default" formType="submit" hover-class="other-button-hover"> 修改 </button>
  </form>

</view>