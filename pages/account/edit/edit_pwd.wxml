<!--pages/account/edit/edit_pwd.wxml-->
<view class="title">修改密码</view>
<view class="login">
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="section">
      <input name="password" class="{{ password == true ? 'userError' : ''}}" type="text" password maxlength="100" placeholder="请输入新密码" />
      <input name="check" class="{{ check == true ? 'userError' : ''}}" type="text" password maxlength="100" placeholder="请确认密码" />
    </view>
    <button formType="submit" hover-class="other-button-hover"> 修改 </button>
  </form>
</view>